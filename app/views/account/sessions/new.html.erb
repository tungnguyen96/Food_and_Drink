<% provide :title, t(".log") %>

<section class="login">
  <div class="container">
    <h1 class="text-center"><%= t ".log" %></h1>
      <%= form_for :session, url: account_sessions_path, html: {autocomplete: "off"} do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control email-field" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control text-field" %>
        </div>
        <div class="form-group text-center">
          <%= f.button t(".log"), type: "submit", class: "btn btn-success" %>
        </div>
      <% end %>
      <p class="text-center"><%= t ".new" %><%= link_to t(".sign"), new_account_user_path %></p>
  </div>
</section>
