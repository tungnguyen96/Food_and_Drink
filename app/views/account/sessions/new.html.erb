<% provide :title, t(".log") %>

<h1><%= t ".log" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: account_sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t(".log"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t ".new" %><%= link_to t(".sign"), new_account_user_path %></p>
  </div>
</div>
