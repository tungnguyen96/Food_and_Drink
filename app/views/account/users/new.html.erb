<% provide :title, t(".sign") %>

<section class="login">
  <h1><%= t(".sign") %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user, url: account_users_path do |f| %>
        <%= render "account/shared/error_messages"%>
      
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      
        <%= f.label :password_confirmation, t(".pass_con") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      
        <%= f.submit t(".sign"), class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</section>
