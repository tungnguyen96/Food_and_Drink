<%= provide :title, t(".title") %>
<div>
  <li class="dropdown">
    <%= link_to t(".filter"), "#", class: "btn btn-primary" %>
    <ul class="dropdown-menu">
      <li>
        <%= link_to t(".name_desc"),
          products_path(sort: :name, order: :desc) %>
      </li>
      <li>
        <%= link_to t(".price_asc"),
          products_path(sort: :price, order: :asc) %>
      </li>
      <li>
        <%= link_to t(".price_desc"),
          products_path(sort: :price, order: :desc) %>
      </li>
      <li>
        <%= link_to t(".rate_asc"),
          products_path(sort: :rate_average, order: :asc) %>
      </li>
      <li>
        <%= link_to t(".rate_desc"),
          products_path(sort: :rate_average, order: :desc) %>
      </li>
    </ul>
  </li>
</div>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h2 class="card-title"><%= product.name %></h2>
          <p class="card-text"><%= product.detail %></p>
          <div><%= t ".price" %><%= product.price %></div>
          <div><%= t ".rate" %><%= product.rate_average %></div>
        </div>
        <div class="card-footer">
          <%= link_to  t(".cart"), "#", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="pagination justify-content-center">
  <%= paginate @products, theme: "google" %>
</div>
